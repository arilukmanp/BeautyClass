<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:id="@+id/backAgenV2"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        tools:context=".View.Agenda">

        <android.support.v4.view.ViewPager
            android:id="@+id/AgendaV2"
            android:foregroundGravity="center"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="140dp">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_below="@+id/AgendaV2"
            >
            <android.support.v7.widget.CardView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/titleDescAgendaV2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/titledesc"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description :"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/DescAgendaV2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem1"
                        android:padding="5dp"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:textAlignment="viewStart"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Place :"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/placeAgendaV2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UIN Suka Convention Hall"
                        android:padding="5dp"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:textAlignment="viewStart"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Speaker :"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        />
                    <android.support.v7.widget.CardView
                        android:id="@+id/spkCardV2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:clickable="true"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_account_circle_black_24dp"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/speakernameV2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ir Soekarno"
                                    android:padding="5dp"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    />
                                <TextView
                                    android:id="@+id/degreeSpeakerV2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Presiden RI yang pertama"
                                    android:padding="5dp"
                                    android:textStyle="italic"
                                    android:textSize="11sp"
                                    />
                            </LinearLayout>


                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>