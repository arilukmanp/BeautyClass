<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgotPasswordActivity">


    <ImageView
        android:layout_width="230dp"
        android:layout_height="162dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/illustration_email"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:lines="2"
        android:lineHeight="18dp"
        android:textAlignment="center"
        android:text="Please enter your registered email address and we will send you an email to reset your password"/>

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_input"
        android:hint="@string/hint_forgot_password"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:textColorLink="@color/colorPrimary" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_login"
        android:paddingLeft="50dp"
        android:paddingTop="15dp"
        android:paddingRight="50dp"
        android:paddingBottom="15dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="Recover Password"
        android:textColor="#fff"
        android:textSize="14dp"
        android:onClick="resetSend"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail" />

</LinearLayout>