<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        >
        <LinearLayout
            android:id="@+id/backMeal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="70dp"
            android:background="@drawable/back_meals"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:elevation="1dp"
            >
            <TextView
                android:id="@+id/rv_name_meals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Nama Makanan"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="12dp"
                    android:background="@android:drawable/ic_menu_my_calendar"
                    />
                <TextView
                    android:id="@+id/rv_date_meals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senin, 11 April 2019"
                    android:textSize="11sp"
                    android:textStyle="italic"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_access_time_black_24dp"
                    />
                <TextView
                    android:id="@+id/rv_time_meal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.00"
                    android:textSize="11sp"
                    android:textStyle="italic"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_place_black_24dp"
                    />
                <TextView
                    android:id="@+id/rv_place_meal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="convention Hall Lt 3 UIN Suka"
                    android:textSize="11sp"
                    android:textStyle="italic"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        >
        <ImageView
            android:id="@+id/mealsPic"
            android:src="@drawable/bg_header"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/pics_shape"
            tools:srcCompat="@tools:sample/avatars"
            android:scaleType="centerCrop"
            />
    </android.support.v7.widget.CardView>





</RelativeLayout>